
<% if @article.errors.any? %>
  <h2> ERRORS ARE- </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article  , method: "put" do |f|%>
  
    <%#= f.label :title%> <br/>
    <%#= f.text_field :title%>
  
  <p> 
    <%= f.label :description%> <br/>
    <%= f.text_area :description%>
  </p>
  <p> 
    <%= f.submit %> <br/>
  </p>
<% end %>
